<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
    <title>All Products</title>
</head>
<body>
    <nav
    class="navbar navbar-expand navbar-dark bg-dark flex-column flex-md-row bd-navbar"
  >
    <h3 style="color: white;">All Products</h3>
    <div class="navbar-nav-scroll" style="margin-left: 5%;">
      <ul class="navbar-nav bd-navbar-nav flex-row">
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link " href="/"><h5>Home</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/"><h5>Link3</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/customer/all"><h5>Customers</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link" href="/supplier/all"><h5>Suppliers</h5></a>
        </li>
        <li class="nav-item" style="padding : 3%">
          <a class="nav-link active" href="/product/all"><h5>Products</h5></a>
        </li>
      </ul>
    </div>
  </nav>
  
    <div class="container">
            <h1>
                    List Of Suppliers
                </h1>
                <table class="table table-striped table-dark" border='true' style = 'width : 100%'>
                    <tr>
                        <th>
                            Product Id
                        </th>
                        <th>
                            Product Image
                        </th>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Company Name
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            GSTIN
                        </th>
                        <th>
                            Base Price
                        </th>
                        <th>
                            MRP
                        </th>
                        <th>
                            Stock
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                          Click To Update
                        </th>
                        <th>
                            Click Delete
                        </th>
                        
                    </tr>
                    <%  data.forEach(function(item){  %>
                    <tr>
                        <td><%= item.id%></td>
                        <td><%= item.image%></td>
                        <td><%= item.name%></td>
                        <td><%= item.category%></td>
                        <td><%= item.comp_name%></td>
                        <td><%= item.size%></td>
                        <td><%= item.gstin%></td>
                        <td><%= item.base_price%></td>
                        <td><%= item.mrp%></td>
                        <td><%= item.stock%></td>
                        <td><%= item.date%></td>
                        <td><a class = ' btn btn-warning' href='/product/update/<%= item.id%>'>Click To Update </a></td>
                        <td><a class = 'mylink btn btn-danger' u_id = '<%= item.id%>' onclick="(function(e){e.preventDefault();})(event)"
                              href='/product/delete/<%= item.id%>'>Click To Delete </a></td>
                        
                    </tr>
                    <%  }) %>           
            
                </table>
                <div class="modal fade" id="mymodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <div  class="modal-body">
                              <h2>Are You Sure To Want to delete </h2>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <button type="button" id = 'yes_button' class="btn btn-primary">Yes</button>
                            </div>
                          </div>
                        </div>
                      </div>
 
</body>

<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/bootstrap.js"></script>
<script src="/javascripts/popper.js"></script>
<script>
        $(document).ready(function(){
           
           $('.mylink').click(function(e){
           
               let UserId = $(this).attr('u_id');
               console.log(UserId)
               $('#mymodal').modal('toggle');
               $('#yes_button').click(function(){
                   console.log("deleted...")
                   window.location = `/product/delete/${UserId}`  /// Vanilla Js 
               })
           })
        })
       </script>
</html>


